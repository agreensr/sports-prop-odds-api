# =============================================================================
# Sports-Bet-AI-API Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="Sports-Bet-AI-API"
APP_VERSION="2.0.0"
ENVIRONMENT=development
DEBUG=false

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8001

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# For local development (standalone PostgreSQL):
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/sports_bet_ai

# For production, use environment-specific DATABASE_URL:
# DATABASE_URL=postgresql://user:password@host:port/database

# -----------------------------------------------------------------------------
# The Odds API (Required)
# -----------------------------------------------------------------------------
# Get your API key at: https://the-odds-api.com/
THE_ODDS_API_KEY=your_api_key_here
ODDS_API_REGIONS=us
ODDS_API_CACHE_TTL=600

# -----------------------------------------------------------------------------
# NBA API (Optional - nba_api library)
# -----------------------------------------------------------------------------
NBA_API_CACHE_TTL=300
NBA_API_TIMEOUT=30

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
# Development: Allow localhost
# Production: Specify exact origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:8001"]

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=memory

# -----------------------------------------------------------------------------
# Scheduler
# -----------------------------------------------------------------------------
SCHEDULER_ENABLED=true

# =============================================================================
# Docker Compose Variables (used by docker-compose.yml)
# =============================================================================
# These variables override defaults when running with Docker Compose
# =============================================================================

# App port (host:container mapping)
APP_PORT=8001

# PostgreSQL settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sports_bet_ai
POSTGRES_PORT=5433

# =============================================================================
# External API URLs (for Clawdbot skills - multi-sport)
# =============================================================================
NBA_API_URL=http://89.117.150.95:8001
NFL_API_URL=http://89.117.150.95:8001
